# ============================================
# REVEEL - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values
# IMPORTANT: Never commit .env.local to git!

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
# PostgreSQL connection string
# Get from: Supabase Dashboard → Settings → Database → Connection string
# Format: postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# Direct database connection (for migrations)
# Use the same as DATABASE_URL but with ?pgbouncer=true&connection_limit=1
# Optional but recommended for Prisma migrations
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"

# ============================================
# NEXTAUTH CONFIGURATION (REQUIRED)
# ============================================
# Secret key for encrypting JWT tokens
# Generate with: openssl rand -base64 32
# Or use: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="YOUR_GENERATED_SECRET_KEY_MIN_32_CHARACTERS_LONG"

# Application URL
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# OPENAI API (REQUIRED FOR AI FEATURES)
# ============================================
# Get from: https://platform.openai.com/api-keys
# Format: sk-...
OPENAI_API_KEY="sk-YOUR_OPENAI_API_KEY_HERE"
# Optional: Use an OpenAI-compatible provider (e.g., Grok xAI, OpenRouter)
# Set provider base URL here and use their API key above
# Examples:
#  - OpenRouter: https://openrouter.ai/api/v1
#  - xAI Grok:   https://api.x.ai/v1  (check latest docs)
OPENAI_BASE_URL=""

# ============================================
# AI PROVIDER SWITCH (TESTING OPTION)
# ============================================
# Use 'openai' (default) or 'hf' (Hugging Face Inference API)
AI_PROVIDER="openai"

# Hugging Face (only if AI_PROVIDER=hf)
# Get key from: https://huggingface.co/settings/tokens
HF_API_KEY="hf_YOUR_HUGGING_FACE_API_KEY"
# Optional: override model (must be available on Inference API)
# e.g., google/gemma-2-2b-it, mistralai/Mistral-7B-Instruct-v0.2
HF_MODEL="google/gemma-2-2b-it"

# ============================================
# REDIS CONFIGURATION (REQUIRED FOR BACKGROUND JOBS)
# ============================================
# Redis connection URL
# Get from: Upstash Dashboard → Database → REST URL
# Or: Redis Cloud Dashboard → Connect → Connection string
# Format: redis://default:[PASSWORD]@[HOST]:[PORT]
# Or: rediss://default:[PASSWORD]@[HOST]:[PORT] (for SSL)
REDIS_URL="redis://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:6379"

# ============================================
# EMAIL SERVICE - RESEND (REQUIRED FOR EMAIL NOTIFICATIONS)
# ============================================
# Get from: https://resend.com/api-keys
# Format: re_...
RESEND_API_KEY="re_YOUR_RESEND_API_KEY_HERE"

# From email address (must be verified in Resend)
# Update this in src/services/email.ts as well!
# Format: noreply@yourdomain.com or Reveel <noreply@yourdomain.com>
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
# Set to: development | production
NODE_ENV="development"

# ============================================
# CORS CONFIGURATION (OPTIONAL - FOR PRODUCTION)
# ============================================
# Comma-separated list of allowed origins for API requests
# Only needed in production if you have specific frontend domains
# Example: https://yourdomain.com,https://app.yourdomain.com
# Leave empty for development (allows all origins)
ALLOWED_ORIGINS=""

# ============================================
# APPLICATION URL (OPTIONAL)
# ============================================
# Your application's public URL
# Used for generating links in emails and notifications
# Usually same as NEXTAUTH_URL in production
APP_URL="http://localhost:3000"


